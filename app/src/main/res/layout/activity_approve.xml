<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".approve"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="20dp"
            android:background="@color/colorPrimaryDark">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="REQUESTED USER"
                android:fontFamily="@font/bungee_regular"
                android:textColor="#aeaeae"
                android:textSize="22sp"
                />

            <ImageView
                android:id="@+id/profileimg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/img" />
            <TextView
                android:id="@+id/nametxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:fontFamily="@font/bungee_regular"
                android:layout_toRightOf="@+id/profileimg"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:layout_marginLeft="10dp"
                android:textColor="#aeaeae"
                />
            <TextView
                android:id="@+id/idtxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/profileimg"
                android:layout_below="@+id/nametxtview"
                android:includeFontPadding="false"
                android:layout_marginLeft="10dp"
                android:textColor="#aeaeae"
                android:fontFamily="@font/bungee_regular"/>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-100dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_weight="1"
            android:layout_height="125dp"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#455a64"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/department"/>
                <TextView
                    android:id="@+id/depttxtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CSE"
                    android:textSize="20sp"
                    android:fontFamily="@font/bungee_regular"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:textColor="#aeaeae"/>
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/depttxtview"
                    android:includeFontPadding="false"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_weight="1"
            android:layout_height="125dp"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#455a64"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/level"/>
                <TextView
                    android:id="@+id/leveltxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="20sp"
                    android:fontFamily="@font/bungee_regular"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:textColor="#aeaeae"
                    />
                <TextView
                    android:id="@+id/booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/leveltxt"
                    android:includeFontPadding="false"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cgviewtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CG"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/cgpa"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:fontFamily="@font/bungee_regular"
                    android:text="3.83"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailtxtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:textColor="#000"
                    android:fontFamily="@font/bungee_regular"
                    android:textSize="15dp"
                    android:text="shahriarkhan.ndc@gmail.com"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phonetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone No"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/phone_icon"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:textColor="#000"
                    android:fontFamily="@font/bungee_regular"
                    android:text="01521436444"
                    android:textSize="15dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/barcodeidtxtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="BarcodeID"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/barcode"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:textColor="#000"
                    android:fontFamily="@font/bungee_regular"
                    android:text="9102344584"
                    android:textSize="15dp"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

    <Button
        android:id="@+id/approvebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="approve"
        android:layout_gravity="center"
        />

    </LinearLayout>

</ScrollView>