<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailedprofile"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="20dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Candidate Profile"
                android:fontFamily="@font/bungee_regular"
                android:textColor="#aeaeae"
                android:textSize="22sp"
                />
            <ImageView
                android:id="@+id/candidateimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/img" />
            <TextView
                android:id="@+id/candidatenametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:fontFamily="@font/bungee_regular"
                android:layout_toRightOf="@+id/candidateimage"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:layout_marginLeft="10dp"
                android:textColor="#aeaeae"
                />
            <TextView
                android:id="@+id/candidateidtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/candidateimage"
                android:layout_below="@+id/candidatenametxt"
                android:includeFontPadding="false"
                android:layout_marginLeft="10dp"
                android:textColor="#aeaeae"
                android:fontFamily="@font/bungee_regular"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-100dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_weight="1"
                android:layout_height="125dp"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#455a64"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/department"/>
                    <TextView
                        android:id="@+id/candidatedepttxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CSE"
                        android:textSize="20sp"
                        android:fontFamily="@font/bungee_regular"
                        android:layout_centerInParent="true"
                        android:includeFontPadding="false"
                        android:textColor="#aeaeae"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/candidatedepttxt"
                        android:includeFontPadding="false"/>
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_weight="1"
                android:layout_height="125dp"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#455a64"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/level"/>
                    <TextView
                        android:id="@+id/candidatelvltxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="20sp"
                        android:fontFamily="@font/bungee_regular"
                        android:layout_centerInParent="true"
                        android:includeFontPadding="false"
                        android:textColor="#aeaeae"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/candidatelvltxt"
                        android:includeFontPadding="false"/>
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/candidatecgtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CG"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/cgpa"
                android:drawablePadding="10dp"
                android:enabled="false"
                android:textColor="#000"
                android:textSize="15dp"
                android:fontFamily="@font/bungee_regular"
                android:text="3.83"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/candidateprotxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Propaganda"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/propaganda"
                android:drawablePadding="10dp"
                android:enabled="false"
                android:textColor="#000"
                android:textSize="15dp"
                android:fontFamily="@font/bungee_regular"
                android:text="Candidate's Propaganda"
                android:inputType="textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/votingbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="scanButton"
            android:text="give Vote by fingerprint"
            android:layout_margin="5dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your passcode"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/cgpa"
                android:drawablePadding="10dp"
                android:enabled="true"
                android:textColor="#000"
                android:textSize="15dp"
                android:fontFamily="@font/bungee_regular"
                android:text=""/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/votingbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="scanButton"
            android:text="give Vote by passcode"
            android:layout_margin="5dp"/>

    </LinearLayout>
    </LinearLayout>

</ScrollView>